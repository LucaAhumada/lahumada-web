---
interface ToolCategory {
  title: string;
  tools: string[];
}

const toolCategories: ToolCategory[] = [
  {
    title: "Testing Frameworks",
    tools: ["Playwright", "Capybara", "Jest", "Cypress", "Mocha", "RSpec"],
  },
  {
    title: "QA Process",
    tools: ["TestRail", "Postman", "Datadog", "Jira", "Notion"],
  },
  {
    title: "Frontend",
    tools: ["React", "Astro", "Tailwind", "HTML/CSS", "JavaScript"],
  },
  {
    title: "Backend",
    tools: ["Node.js", "Express", "Ruby on Rails"],
  },
  {
    title: "CI/CD",
    tools: ["GitHub Actions", "GitLab CI", "Vercel", "Docker"],
  },
  {
    title: "Monitoring & Debug",
    tools: ["Datadog", "Chrome DevTools"],
  },
  {
    title: "Collaboration",
    tools: ["Notion", "Confluence", "Google Workspace"],
  },
];
---

<section
  id="toolset"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Expertise</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Toolset</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        toolCategories.map((category) => (
          <div class="p-6 rounded-xl bg-[#1414149c] border border-[var(--white-icon-tr)]">
            <h4 class="text-xl font-semibold mb-4">{category.title}</h4>
            <div class="flex flex-wrap gap-2">
              {category.tools.map((tool) => (
                <span class="px-3 py-1 rounded-full text-sm bg-[var(--white-icon-tr)] text-[var(--white-icon)]">
                  {tool}
                </span>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

